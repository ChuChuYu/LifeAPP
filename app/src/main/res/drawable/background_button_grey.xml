<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

 <!--按壓時 -->
<item android:state_pressed="true">
<!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
    <shape android:shape="rectangle">
<!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
        <corners android:radius="20dp" />
<!--邊框-->
        <!--<stroke android:width="1dip" android:color="#538394" />-->
<!--漸層顏色-->
        <!--<gradient android:angle="-90" android:startColor="#0099CC" android:endColor="#017DAB"  />-->

        <solid android:color="#50FFFFFF"/>
    </shape>
</item>

 <!--預設時 -->
<item android:state_pressed="false">
    <shape android:shape="rectangle"  >
        <corners android:radius="20dp" />
        <!--<stroke android:width="0dip" android:color="#071E54" />-->
        <!--<gradient android:angle="-90" android:startColor="#588ABD" android:endColor="#588ABD"  />-->
        <solid android:color="#803B3B3B"/>
    </shape>
</item>

</selector>


