        app:srcCompat="@drawable/tag_blue" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
